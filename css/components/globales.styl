//Variables
$Fuente1 = "Lato", sans-serif
$Fuente2 = "Oswald", sans-serif
$color-primario = #333333
$color-secundario = #8841da
$color-claro = #fff

//Mixins
contenedor()
	margin 40px auto
	padding 30px 0
	inline-size 90%
	display flex
	flex-wrap: wrap

caja-sombra()
	background-color: color-claro
	box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.20)

//Funciones
opacidad($color, $nivel)
	alpha($color, $nivel)

//Loops
for header in 3 2 1
	h{header}
		font-size 35px - (5 * header)
		margin 0

//Conditionals
titulos($fuente)
	if $fuente == $Fuente1
		font-family $Fuente1
	else 
		font-family $Fuente2
		font-weight 600
		text-transform uppercase

* 
	box-sizing border-box

body
	margin: 0
	color $color-primario
	titulos($Fuente1)
